<h1><%= @survey.title %></h1>

<% if @survey.questions.any? %>
  <h4>Here are the questions for this survey:</h4>

  <% @survey.questions.each do |question| %>
    <ul>
      <li>
        <%= link_to question.content, survey_question_path(@survey, question) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>No questions are listed for this survey.</p>
<% end %>


<h4><%= link_to "Add a question in this survey", new_survey_question_path(@survey) %></h4>
<h4><%= link_to "Edit this survey", edit_survey_path(@survey) %></h4>
<h4><%= link_to "Delete this survey", survey_path(@survey),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></h4>

<h4><%= link_to "Return to surveys", surveys_path %></h4>